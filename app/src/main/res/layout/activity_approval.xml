<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.onclouderpandroidapp.ApprovalActivity" >
  
  <Button
        android:id="@+id/btnSaleOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false" 
        android:textColor="#FFFFFF"
        android:onClick="navigate"
        android:background="@drawable/buttoncolor"
        android:layout_alignLeft="@+id/btnPurchaseOrder"
        android:layout_above="@+id/btnPurchaseOrder"
        android:text="@string/SaleOrder" />

    <Button
        android:id="@+id/btnPurchaseOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false" 
        android:onClick="navigate"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttoncolor"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/PurchaseOrder" />

</RelativeLayout>
