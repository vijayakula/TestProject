<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.onclouderpandroidapp.PurchaseOrderDetails" >

   
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblDocumentNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documentNo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDocumentNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblDocumentNo" />

            <TextView
                android:id="@+id/lblVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDocumentNo"
                android:layout_marginTop="10dp"
                android:text="@string/vendor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDocumentNo"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/lblVendorContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVendor"
                android:layout_marginTop="10dp"
                android:text="@string/vendorContact"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVendorContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblVendorContact"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lblReferenceNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVendorContact"
                android:layout_marginTop="10dp"
                android:text="@string/referenceNumber"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtReferenceNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblReferenceNumber"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lblCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtReferenceNumber"
                android:layout_marginTop="10dp"
                android:text="@string/currency"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblCurrency"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lblEntryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCurrency"
                android:layout_marginTop="10dp"
                android:text="@string/entryDate"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEntryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblEntryDate"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lblVendorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEntryDate"
                android:layout_marginTop="10dp"
                android:text="@string/vendorAddress"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVendorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblVendorAddress"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lblRequestedDelieveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVendorAddress"
                android:layout_marginTop="10dp"
                android:text="@string/requestedDelieveryDate"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRequestedDelieveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblRequestedDelieveryDate"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lblPriceList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRequestedDelieveryDate"
                android:layout_marginTop="10dp"
                android:text="@string/priceList"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPricelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblPriceList"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lblBaseCurrencyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPricelist"
                android:layout_marginTop="10dp"
                android:text="@string/baseCurrencyValue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBaseCurrencyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblBaseCurrencyValue"
                android:layout_marginTop="0dp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
